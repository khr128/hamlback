%{
#include <stdio.h>
#include "haml2erb.tab.h"
%}

NUM           [0-9]
VAR           [a-zA-Z]
WS            [ ]
TAB           \t
PCT           %
OPEN_BRACE    \{
CLOSE_BRACE   \}
COLON         \:
ARROW         =>

%%
"%"            { return PCT; }
\n             { return EOL; }
{VAR}+         { yylval.strval = strdup(yytext); return VAR; }
<<EOF>>        printf ( "End of parse.\n" ); yyterminate();
%%
