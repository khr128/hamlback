%h1 Editing user
-form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :password
    %br 
    = f.text_field :password
  %p
    = f.label :roles
    %br
    = f.select :roles, ["admin", "user", "guest"]
  %p= f.submit "Update"

= link_to 'Show', @user
= link_to 'Back', users_path
